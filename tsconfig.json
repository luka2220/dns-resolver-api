{
    "compilerOptions": {
        "target": "es2016",
        "module": "commonjs",
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "outDir": "./dist",
        "rootDir": "./"
    },
    "include": ["src/**/*.ts", "test/**/*.test.ts"],
    "exclude": ["node_modules"]
}
